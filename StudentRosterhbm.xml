<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name = "StudentRoster" table = "STUDENTROSTER">
      
        <meta attribute = "class-description">
            <!--Define mapping from Java to classes in the DB-->
            This class contains the student information. 
        </meta>
        <!--Map the unique ID attribute to the primary key of the DB table.-->
        <id name = "studentId" type = "int" column = "id">
            <generator class="native"/>
        </id>
        <!--Map the Java class column to the DB table column.-->
        <property name = "firstName" column = "first_name" type = "string"/>
        <property name = "lastName" column = "last_name" type = "string"/>
        <property name = "studentId" column = "student_id" type = "int"/>
        <property name = "busNumber" column = "bus_number" type = "int"/>
        <property name = "seatNumber" column = "seat_number" type = "int"/>
    </class>
</hibernate-mapping>
